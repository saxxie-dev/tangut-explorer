---
// No props needed anymore
---

<header class="bg-brown-900 dark:bg-beige-100 border-b-2 border-beige-100 dark:border-brown-900 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo/Title -->
      <div class="flex items-center">
        <a href="/" class="group">
          <h1 class="font-brutalist text-2xl md:text-3xl font-bold text-beige-100 dark:text-brown-900 tracking-tight">
            TANGUT EXPLORER
          </h1>
          <p class="font-brutalist text-xs text-beige-300 dark:text-brown-700 uppercase tracking-widest">
            Unicode Character Database
          </p>
        </a>
      </div>
      
      <!-- Controls -->
      <div class="flex items-center">
        <!-- Theme Toggle -->
        <div class="flex items-center space-x-3">
          <span class="font-brutalist text-xs text-beige-300 dark:text-brown-700 uppercase tracking-widest">THEME</span>
          <button
            id="theme-toggle"
            class="relative w-12 h-6 bg-beige-100 dark:bg-brown-900 border-2 border-brown-900 dark:border-beige-100 transition-all duration-300 hover:shadow-lg cursor-pointer"
            aria-label="Toggle theme"
          >
            <div class="absolute top-0 left-0 w-5 h-4 bg-brown-900 dark:bg-beige-100 transition-transform duration-300 m-0.5 dark:translate-x-5"></div>
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  function toggleTheme() {
    const html = document.documentElement;
    const isDark = html.classList.contains('dark');
    
    if (isDark) {
      html.classList.remove('dark');
      localStorage.setItem('theme', 'light');
    } else {
      html.classList.add('dark');
      localStorage.setItem('theme', 'dark');
    }
    // PostHog tracking
    if (typeof posthog !== 'undefined') {
        posthog.capture('theme_toggled', { theme: isDark ? 'light' : 'dark' });
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const themeToggle = document.getElementById('theme-toggle');
    if (themeToggle) {
      themeToggle.addEventListener('click', toggleTheme);
    }
  });
</script>
</header>