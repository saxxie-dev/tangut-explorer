---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import RelatedCharacterSection from '../../components/RelatedCharacterSection.astro';
import { getUnicodeString, isValidTangutCharacter } from '../../utils/tangut';
import { getAllCharacterData, type CharacterData } from '../../utils/database.ts';

export async function getStaticPaths() {
  const allCharacters = await getAllCharacterData();
  return Array.from(allCharacters.values()).map((characterData: CharacterData) => ({
    params: { unicode: characterData.unicode_string },
    props: { characterData }
  }));
}

const { characterData } = Astro.props as { characterData: CharacterData };
const { unicode: unicodeParam } = Astro.params;

// Validate the character
if (!characterData || !isValidTangutCharacter(unicodeParam || '')) {
  return Astro.redirect('/404');
}

const pageTitle = `${characterData.unicode} (${characterData.unicode_string}) - Tangut Explorer`;

let tone = '';
if (characterData.rhyme_class) {
  if (characterData.rhyme_class.startsWith('1')) {
    tone = '¹';
  } else if (characterData.rhyme_class.startsWith('2')) {
    tone = '²';
  }
}
---

<Layout title={pageTitle}>
  <div class="min-h-screen">
    <Header />
    
    <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Character Display -->
      <div class="text-center">
        <!-- Main Character, Reading, and Definition Grid -->
        <div class="mb-8 p-0 border-2 border-brown-900 dark:border-beige-100 bg-beige-100 dark:bg-brown-800 grid grid-cols-2 grid-rows-2">
          <!-- Character (2x1) -->
          <div class="col-span-1 row-span-2 flex items-center justify-center p-4 border-r-2 border-brown-900 dark:border-beige-100">
            <div class="font-tangut text-[200px] md:text-[300px] text-brown-900 dark:text-beige-100 leading-none">
              {characterData.unicode}
            </div>
          </div>

          <!-- Reading (1x1) -->
          <div class="col-span-1 row-span-1 flex flex-col items-center justify-center p-4 border-b-2 border-brown-900 dark:border-beige-100">
            {characterData.gong_huangcheng_reading ? (
              <div class="font-sans-reading text-4xl text-brown-700 dark:text-beige-300">
                {characterData.gong_huangcheng_reading}{tone}
              </div>
            ) : (
              <div class="font-brutalist text-xl text-brown-700 dark:text-beige-300 opacity-70">
                NO READING DATA
              </div>
            )}
            {characterData.pronunciation_warning && (
              <div class="mt-2 text-center">
                <p class="font-brutalist text-xs text-red-800 dark:text-red-200 font-bold">
                  (Pronunciation suspect)
                </p>
              </div>
            )}
          </div>

          <!-- Definition (1x1) -->
          <div class="col-span-1 row-span-1 flex flex-col items-center justify-center p-4">
            {characterData.english_definition ? (
              <div class="font-brutalist text-xl text-brown-900 dark:text-beige-100">
                {characterData.english_definition}
              </div>
            ) : (
              <div class="font-brutalist text-xl text-brown-700 dark:text-beige-300 opacity-70">
                NO DEFINITION DATA
              </div>
            )}
          </div>
        </div>
        
        <!-- Character Info -->
        <div class="bg-brown-900 dark:bg-beige-100 text-beige-100 dark:text-brown-900 p-8 border-2 border-brown-900 dark:border-beige-100">
          <h1 class="font-brutalist text-3xl md:text-4xl font-bold mb-4">
            TANGUT CHARACTER
          </h1>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left max-w-2xl mx-auto">
            <div>
              <dt class="font-brutalist text-sm font-bold opacity-75 mb-1">UNICODE</dt>
              <dd class="font-brutalist text-xl font-bold">{characterData.unicode_string}</dd>
            </div>
            
            <div>
              <dt class="font-brutalist text-sm font-bold opacity-75 mb-1">DECIMAL</dt>
              <dd class="font-brutalist text-xl font-bold">{characterData.unicode.codePointAt(0)}</dd>
            </div>
            
            <div>
              <dt class="font-brutalist text-sm font-bold opacity-75 mb-1">BLOCK</dt>
              <dd class="font-brutalist text-xl font-bold">
                {characterData.unicode.codePointAt(0)! >= 0x18D00 ? 'TANGUT SUPPLEMENT' : 'TANGUT'}
              </dd>
            </div>
            
            <div>
              <dt class="font-brutalist text-sm font-bold opacity-75 mb-1">CATEGORY</dt>
              <dd class="font-brutalist text-xl font-bold">IDEOGRAPH</dd>
            </div>
          </div>
        </div>
        
        <div class="mt-8 space-y-6">
          <!-- Dictionary Info -->
          <div class="p-6 border-2 border-brown-900 dark:border-beige-100 bg-beige-100 dark:bg-brown-800">
            <h2 class="font-brutalist text-xl font-bold text-brown-900 dark:text-beige-100 mb-4">
              DICTIONARY DATA
            </h2>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
              {characterData.xhzd_index && (
                <div>
                  <dt class="font-brutalist text-sm font-bold text-brown-700 dark:text-beige-300 mb-1">XHZD INDEX</dt>
                  <dd class="font-brutalist text-lg text-brown-900 dark:text-beige-100">{characterData.xhzd_index}</dd>
                </div>
              )}
              
              {characterData.rhyme_class && (
                <div>
                  <dt class="font-brutalist text-sm font-bold text-brown-700 dark:text-beige-300 mb-1">RHYME CLASS</dt>
                  <dd class="font-brutalist text-lg text-brown-900 dark:text-beige-100">
                    <a href={`/rhyme/${characterData.rhyme_class}`} class="hover:underline">
                      {characterData.rhyme_class}
                    </a>
                  </dd>
                </div>
              )}

              {characterData.initial_class && (
                <div>
                  <dt class="font-brutalist text-sm font-bold text-brown-700 dark:text-beige-300 mb-1">INITIAL CLASS</dt>
                  <dd class="font-brutalist text-lg text-brown-900 dark:text-beige-100">
                    <a href={`/initial/${characterData.initial_class}`} class="hover:underline">
                      {characterData.initial_class}
                    </a>
                  </dd>
                </div>
              )}
              
              {characterData.variant && (
                <div>
                  <dt class="font-brutalist text-sm font-bold text-brown-700 dark:text-beige-300 mb-1">VARIANT OF</dt>
                  <dd class="text-lg text-brown-900 dark:text-beige-100 font-tangut">
                    <a href={`/character/${getUnicodeString(characterData.variant)}`} class="hover:underline">
                      {characterData.variant}
                    </a>
                  </dd>
                </div>
              )}
            </div>
            {characterData.variant_warning && (
                <div class="mt-4 p-3 bg-yellow-100 dark:bg-yellow-900">
                  <p class="font-brutalist text-xs text-yellow-800 dark:text-yellow-200 font-bold">
                    Note: Variant status is uncertain.
                  </p>
                </div>
            )}
          </div>
          
          
          
          <!-- IDS Structure -->
          {characterData.ids_sequence && (
            <div class="p-6 border-2 border-brown-900 dark:border-beige-100 bg-beige-100 dark:bg-brown-800">
              <h2 class="font-brutalist text-xl font-bold text-brown-900 dark:text-beige-100 mb-4">
                CHARACTER STRUCTURE (IDS)
              </h2>
              <p class="font-tangut text-2xl text-brown-900 dark:text-beige-100 mb-2">
                {characterData.ids_sequence}
              </p>
              <p class="font-brutalist text-sm text-brown-700 dark:text-beige-300">
                Ideographic Description Sequence showing character composition
              </p>
            </div>
          )}

          <!-- Relationships -->
          <RelatedCharacterSection title="VARIANTS" characters={characterData.variants} />
          <RelatedCharacterSection title="SYNONYMS" characters={characterData.synonyms} />
          <RelatedCharacterSection title="SIMILAR (SAME RADICAL)" characters={characterData.similar_ids_radical} />
          <RelatedCharacterSection title="SIMILAR (SAME REMAINDER)" characters={characterData.similar_ids_rest} />

        </div>
      </div>
    </main>
  </div>
</Layout>
